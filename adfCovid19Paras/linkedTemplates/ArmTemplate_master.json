{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adfCovid19Paras"
		},
		"linkedServiceADLS_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'linkedServiceADLS'"
		},
		"linkedServiceADLS_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://covid19dlparas.dfs.core.windows.net/"
		},
		"sourceLinkedService_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "@{linkedService().baseUrl}"
		},
		"Trigger_everyOtherDay_Ingest_properties_copyData_parameters_p_array": {
			"type": "array",
			"defaultValue": [
				{
					"baseUrl": "https://catalog.ourworldindata.org/",
					"relativeUrl": "garden/covid/latest/compact/compact.csv",
					"folder": "covid19",
					"file": "covid"
				},
				{
					"baseUrl": "https://www.gstatic.com/",
					"relativeUrl": "covid19/mobility/Global_Mobility_Report.csv",
					"folder": "mobilityData",
					"file": "mobility"
				},
				{
					"baseUrl": "https://pandemicdatalake.blob.core.windows.net/",
					"relativeUrl": "public/curated/covid-19/covid_policy_tracker/latest/covid_policy_tracker.csv",
					"folder": "policyData",
					"file": "policy"
				}
			]
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adfCovid19Paras_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"linkedServiceADLS_accountKey": {
						"value": "[parameters('linkedServiceADLS_accountKey')]"
					},
					"linkedServiceADLS_properties_typeProperties_url": {
						"value": "[parameters('linkedServiceADLS_properties_typeProperties_url')]"
					},
					"sourceLinkedService_properties_typeProperties_url": {
						"value": "[parameters('sourceLinkedService_properties_typeProperties_url')]"
					},
					"Trigger_everyOtherDay_Ingest_properties_copyData_parameters_p_array": {
						"value": "[parameters('Trigger_everyOtherDay_Ingest_properties_copyData_parameters_p_array')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}